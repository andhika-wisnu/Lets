<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        
        <TextView
            android:id="@+id/nama"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Nama"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/ruangan"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Ruangan"
            android:textAlignment="center" />
        <TextView
            android:id="@+id/tglPinjam"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Tanggal Pinjam"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/jamPinjam"
                android:layout_marginTop="10dp"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Jam Pinjam"
                android:textAlignment="textEnd" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="-"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/jamselesai"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Jam Akhir"
                android:textAlignment="textStart" />

        </LinearLayout>

        <TextView
            android:id="@+id/keterangan"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Keterangan"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/status"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Status"
            android:textAlignment="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/accept"
            android:background="#65B368"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/decline"
            android:background="#EC5680"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Decline"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>